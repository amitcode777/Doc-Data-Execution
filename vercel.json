{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook/hubspot",
      "methods": [
        "POST"
      ],
      "dest": "/server.js"
    },
    {
      "src": "/api/send-email",
      "methods": [
        "POST"
      ],
      "dest": "/server.js"
    },
    {
      "src": "/api/background-email",
      "methods": [
        "POST"
      ],
      "dest": "/server.js",
      "headers": {
        "x-vercel-background": "1"
      }
    },
    {
      "src": "/queue/status",
      "methods": [
        "GET"
      ],
      "dest": "/server.js"
    }
  ]
}